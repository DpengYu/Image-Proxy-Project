# Image Proxy Project - 环境变量配置
# 复制此文件为 .env 并修改相应值

# 服务器配置
SERVER_DOMAIN=http://localhost
SERVER_PORT=8000

# 安全配置
SECRET_KEY=your_32_character_secret_key_here
MAX_FILE_SIZE_MB=10

# 数据库配置
DB_FILE=images.db

# 清理配置
CLEANUP_ENABLE=true
CLEANUP_EXPIRE_DAYS=30
CLEANUP_TIME=03:00:00

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/var/log/image_proxy/fastapi.log

# 用户配置 (可以通过环境变量配置单个用户)
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=change_this_password